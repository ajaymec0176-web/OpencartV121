<!-- 
	thread-count="5" == mean 5 memory locations will be created & in each location each test will be executed 
	thread-count <="5"  bcoz beyond 5 it becomes unstable 
	
 == Note == to make parallel execution in <suite> level just add      parallel="tests"

<suite name="Suite"  thread-count="5"  parallel="tests">

  <test  name="chrometest">
    <parameter name="os" value="Windows"/> 
    <parameter name="browser" value="chrome"/>
    
    <classes>
      <class name="testCases.TC001_AccountRegistrationTest"/>
    </classes>
  </test> 
  
  
  <test  name="edgetest">
    <parameter name="os" value="Windows"/> 
    <parameter name="browser" value="edge"/>
    
    <classes>
      <class name="testCases.TC001_AccountRegistrationTest"/>
    </classes>
  </test> 
  
  
  
  <test  name="firefoxtest">
    <parameter name="os" value="Windows"/> 
    <parameter name="browser" value="firefox"/>
    
    <classes>
      <class name="testCases.TC001_AccountRegistrationTest"/>
    </classes>
  </test> 
  
  
</suite> 


